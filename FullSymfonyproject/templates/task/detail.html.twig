{% extends 'base.html.twig' %} 
{% block title %}All Tasks! {% endblock %}
{%block body %}

<div class="example-wrapper">
  <h1><b>{{ task.title }}</b></h1>
  <h4 class="w3-text-gray"> {{ task.user.name ~' ' ~task.user.surname }}  
	  <small class="w3-large w3-border w3-black w3-round">{{ task.createdAt|date('d/m/Y h:i') }}</small>
  </h4>
  <h6><b class="w3-text-red">Horas:</b> {{ task.hours }}</h6>
  <h6><b class="w3-text-red">Prioridad:</b> {{ task.priority }}</h6>
  <h6><b class="w3-text-red">Prioridad:</b> {{ task.priority }}</h6>

  <hr />
  <p>{{ task.content }}</p>
</div>
{% endblock %}
