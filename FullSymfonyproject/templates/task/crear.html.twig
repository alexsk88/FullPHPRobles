{% extends 'base.html.twig' %} 
{% block title %}All Tasks! {% endblock %}
{%block body %}

<div class="example-wrapper">
  <h1>Crear Tarea</h1>
  <form action="{{ path('crear') }}" class="w3-container">

    <label class="w3-text-blue"><b>Titulo</b></label>
    <input class="w3-input w3-border" name="titulo" type="text">
     
    <label class="w3-text-blue"><b>Contenido</b></label>
    <textarea name="content" id=""
    class="w3-input w3-border" >
    
    </textarea>

    <label class="w3-text-blue"><b>Prioridad</b></label>
    <select class="w3-select" name="priority">
      <option value="" disabled selected>Seleccione Opcion  </option>
      <option value="Alta">Alta</option>
      <option value="Media">Media</option>
      <option value="Baja">Baja</option>
    </select>

    <label class="w3-text-blue"><b>Horas</b></label>
    <input class="w3-input w3-border" name="horas" type="number">
  <br>
    
    <button class="w3-btn w3-blue">Crear</button>

  </form>
</div>
{% endblock %}
